<% include partials/header %>
<h1 style="text-align: center">Edit Blog</h1>
<div style="width: 30%; margin: 25px auto;">
    <form method="POST" action="/blogs/<%=blogs._id%>?_method=PUT">
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" name="blogs[title]" value="<%=blogs.title%>">
        </div>
        <div class="form-group">
            <label>Image</label>
            <input class="form-control" name="blogs[image]" value="<%=blogs.image%>">
        </div>
        <div class="form-group">
            <label>BLog Text</label><br>
            <textarea name="blogs[body]" style="width: 380px;"><%=blogs.body%></textarea>
        </div>

        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
        </div>

    </form>
                  <a href="/blogs/<%=blogs._id%>">Go Back</a>
</div>
<% include partials/footer %>
